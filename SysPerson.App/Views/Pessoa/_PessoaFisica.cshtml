@model SysPerson.App.Models.Pessoa.PessoaFormularioViewModel

<div id="container-pessoa-fisica" class="col col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden">
    <div class="row">
        <div class="col col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.TextBoxFor(model => model.Cpf, new { @class = "form-control cpf", @maxlength = "14" })
                    <label class="form-label obrigatorio">CPF</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="form-group form-float">
                <br/>
                <div class="form-line">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                    <label class="form-label obrigatorio">Nome</label>
                </div>
            </div>
        </div>
        <div class="col col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="form-group form-float">
                <br />
                <div class="form-line">
                    @Html.TextBoxFor(model => model.EmailPrincipal, new { @class = "form-control" })
                    <label class="form-label obrigatorio">E-mail</label>
                </div>
            </div>
        </div>
        <div class="col col-lg-4 col-md-6 col-sm-12 col-xs-12">
            <label class="control-label">Estado Civil</label>
            <div class="form-group">
                @Html.DropDownListFor(model => model.EstadoCivilId, Model.SelectListItemListaEstadoCivil, "Selecione..", new { @class = "form-control consulta", @Id = "EstadoCivilId" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col col-lg-3 col-md-6 col-sm-12 col-xs-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.TextBoxFor(model => model.Profissao, new { @class = "form-control" })
                    <label class="form-label obrigatorio">Profissão</label>
                </div>
            </div>
        </div>
        <div class="col col-lg-3 col-md-6 col-sm-12 col-xs-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.TextBoxFor(model => model.TelefonePrincipal, new { @class = "form-control telefone" })
                    <label class="form-label obrigatorio">Fone 1</label>
                </div>
            </div>
        </div>
        <div class="col col-lg-3 col-md-6 col-sm-12 col-xs-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.TextBoxFor(model => model.TelefoneSecundario, new { @class = "form-control telefone" })
                    <label class="form-label">Fone 2</label>
                </div>
            </div>
        </div>
        <div class="col col-lg-3 col-md-6 col-sm-12 col-xs-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.TextBoxFor(model => model.TelefoneReserva, new { @class = "form-control telefone" })
                    <label class="form-label">Fone 3</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        
    </div>
    <div class="row">
        <div class="col col-lg-3 col-md-6 col-sm-6 col-xs-12">
            <label class="control-label obrigatorio">Tipo Empresa</label>
            <div class="form-group">
                @Html.DropDownListFor(model => model.TipoEmpresaId, Model.SelectListItemListaTipoEmpresa, "Selecione..", new { @class = "form-control consulta", @Id = "TipoEmpresaId" })
            </div>
        </div>
        <div class="col col-lg-3 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group form-float">
                <br />
                <div class="form-line">
                    @Html.TextBoxFor(model => model.Nascimento, new { @class = "datepicker form-control" })
                    <label class="form-label obrigatorio">Nascimento</label>
                </div>
            </div>
        </div>
        <div class="col col-lg-3 col-md-6 col-sm-6 col-xs-12">
            <label class="control-label obrigatorio">Gênero</label>
            <div class="form-group">
                @Html.DropDownListFor(model => model.GeneroId, Model.SelectListItemListaGenero, "Selecione..", new { @class = "form-control consulta", @Id = "GeneroId" })
            </div>
        </div>
        <div class="col col-lg-3 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group form-float">
                <br />
                <div class="form-line">
                    @Html.TextBoxFor(model => model.Nacionalidade, new { @class = "form-control" })
                    <label class="form-label">Nacionalidade</label>
                </div>
            </div>
        </div>
    </div>
</div>